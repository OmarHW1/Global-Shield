// components/hero-right-modules.tsx
import React from "react"
import MiniRequestForm from "@/components/mini-request-form"
import { CheckCircle } from "react-feather"

export default function HeroRightModules() {
const state = { success: true, message: "Your request has been submitted successfully." }

return (
  <div>
    {state?.success ? (
      <div
        className="flex items-start gap-3 rounded-md border border-white/20 bg-white/10 p-3 text-white"
        role="status"
        aria-live="polite"
      >
        <CheckCircle className="w-5 h-5 text-green-400 mt-0.5" aria-hidden="true" />
        <p className="text-sm">
          {state.message}{" "}
          <a href="tel:+447497580732" className="underline">
            Immediate risk? Call our 24/7 hotline.
          </a>
        </p>
      </div>
    ) : (
      <MiniRequestForm />
    )}
  </div>
)
}

